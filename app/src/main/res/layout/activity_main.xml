<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khairennizamefid.khairennizamefid_1202150285_modul1.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="18dp"
        android:text="dengan Milea"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="nasi_uduk"
        android:ems="10"
        android:padding="16dp"
        android:textSize="25sp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/et1"
        android:layout_marginTop="13dp"
        android:padding="16dp"
        android:ems="10"
        android:text="2"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btEB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="42dp"
        android:background="@color/colorAccent"
        android:onClick="btEB"
        android:text="EATBUS"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="335dp" />

    <Button
        android:id="@+id/btAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btEB"
        android:layout_alignBottom="@+id/btEB"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/colorAccent"
        android:onClick="btAN"
        android:text="ABNORMAL"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="337dp" />
</RelativeLayout>
