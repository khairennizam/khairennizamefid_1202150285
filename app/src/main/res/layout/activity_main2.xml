<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khairennizamefid.khairennizamefid_1202150285_modul1.Main2Activity">

    <TextView
        android:id="@+id/tvMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="30dp"
        android:text="MakanMalam"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/tvCafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="" />

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCafe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Menu"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvNasduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textSize="25sp"
        android:text="Nasi Uduk" />

    <TextView
        android:id="@+id/tvPorsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvMenu"
        android:layout_alignRight="@+id/tvMenu"
        android:layout_below="@+id/tvNasduk"
        android:layout_marginTop="20dp"
        android:text="Porsi"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPorsi"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="" />

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvPorsi"
        android:layout_alignRight="@+id/tvPorsi"
        android:layout_below="@+id/tvTotal"
        android:layout_marginTop="34dp"
        android:text="Harga"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRupiah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHarga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="" />
</RelativeLayout>
